                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    Visibility="Hidden"
                    x:Name="uiStateIcon"
                    Grid.Column="1"
                    Margin="0,2"
                    Source="Images\softwareUpdate-256.png" />
                <TextBlock
                    x:Name="uiStatePresenter"
                     Visibility="Hidden"
                    Grid.Column="2"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Text="Обновление"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="uiAutonomusPresenter"
                    Visibility="Hidden"
                    Grid.Column="2"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Text="Автономный режим"
                    TextWrapping="Wrap" />
            </Grid>
        </Border>

