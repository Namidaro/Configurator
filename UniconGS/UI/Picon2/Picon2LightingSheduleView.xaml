    <UserControl.Resources>
        <ControlTemplate x:Key="GroupBoxTemplate" TargetType="GroupBox">
            <Grid Margin="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Background="#25A0DA"
                    BorderBrush="#25A0DA"
                    BorderThickness="1">
                    <Label Foreground="White">
                        <ContentPresenter
                            Margin="4"
                            ContentSource="Header"
                            RecognizesAccessKey="True" />
                    </Label>
                </Border>

                <Border
                    Grid.Row="1"
                    BorderBrush="#25A0DA"
                    BorderThickness="1,0,1,1">
                    <ContentPresenter Margin="4" />
                </Border>
            </Grid>
        </ControlTemplate>

        <Style x:Key="VisibilityModeStackPanel" TargetType="StackPanel">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Title}" Value="График энергосбережения">
                    <Setter Property="Visibility" Value="Hidden" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Title}" Value="График подсветки">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Title}" Value="График освещения">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisibilityModeGroupBox" TargetType="GroupBox">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Title}" Value="График энергосбережения">
                    <Setter Property="Visibility" Value="Hidden" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Title}" Value="График подсветки">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Title}" Value="График освещения">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  указатель назад и Имя устройства  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>



            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    Text="{Binding Title}" />
                <!--<TextBlock
                    VerticalAlignment="Center"
                    Text="&quot;" />-->
                <!--<TextBlock
                    VerticalAlignment="Center"
                    Text="{Binding DeviceName}" />-->
                <!--<TextBlock
                    VerticalAlignment="Center"
                    Text="&quot;" />-->
            </StackPanel>

            <UniformGrid
                Grid.Column="2"
                HorizontalAlignment="Right"
                Rows="1">
                <Button
                    Margin="6,3"
                    Command="{Binding NavigateToSheduler1Command}"
                    Content="График 1 (освещение)" />
                <Button
                    Margin="6,3"
                    Command="{Binding NavigateToSheduler2Command}"
                    Content="График 2 (иллюминация)" />
                <Button
                    Margin="6,3"
                    Command="{Binding NavigateToSheduler3Command}"
                    Content="График 3 (подсветка)" />
            </UniformGrid>
        </Grid>


        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top">
            <GroupBox Header="Месяц" Template="{StaticResource GroupBoxTemplate}">
                <ListBox
                    IsEnabled="{Binding IsMonthsEnabled}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    ItemsSource="{Binding MonthCollection}"
                    SelectedIndex="{Binding CurrentMothIndex}"
                    SelectedItem="{Binding CurrentMonthName, Mode=TwoWay}" />
            </GroupBox>
            <Expander Margin="5,2" Header="Расчетный график">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Введите координаты" Margin="1,1,1,1"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Широта" Margin="1,1,1,1"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Долгота" Margin="1,1,1,1"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Latitude}" Margin="1,1,1,1"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Longitude}" Margin="1,1,1,1"/>
                    <ComboBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"   ItemsSource="{Binding CityList}" SelectedItem="{Binding SelectedCity}" />

                    <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="1,1,1,1" Content="Рассчитать" Command="{Binding CalculateScheduleCommand}"/>
                </Grid>
            </Expander>
