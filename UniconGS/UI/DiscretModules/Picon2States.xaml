    	<Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="Состояние" Grid.Row="1"/>
    	<Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="Неисправность" Grid.Row="2"/>
    	<StackPanel x:Name="uiStates" Margin="0,3,0,0" Grid.Column="1" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
