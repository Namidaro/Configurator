    	<StackPanel Grid.Column="1" Orientation="Horizontal">
    		<Label Content="1" Margin="6,0,0,0"/>
    		<Label Content="2" Margin="13,0,0,0"/>
    		<Label Content="3" Margin="12,0,0,0"/>
    		<Label Content="4" Margin="13,0,0,0"/>
    		<Label Content="5" Margin="13,0,0,0"/>
