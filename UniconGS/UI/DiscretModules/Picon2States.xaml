    		<local:Lightning Width="15" Height="15" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" Margin="2,0"/>
    	</StackPanel>
    	<StackPanel x:Name="uiErrors" Margin="0,4,0,0" Grid.Column="1" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
    		<local:Lightning Width="15" Height="15" HorizontalAlignment="Left" d:LayoutOverrides="Height" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" HorizontalAlignment="Left" d:LayoutOverrides="Height" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" HorizontalAlignment="Left" d:LayoutOverrides="Height" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" HorizontalAlignment="Left" d:LayoutOverrides="Height" Margin="2,0"/>
