    		<local:Lightning Width="15" Height="15" HorizontalAlignment="Left" d:LayoutOverrides="Height" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" HorizontalAlignment="Left" d:LayoutOverrides="Height" Margin="2,0"/>
    		<local:Lightning Width="15" Height="15" HorizontalAlignment="Left" d:LayoutOverrides="Height" Margin="2,0"/>
    	</StackPanel>
            
    </Grid>
</UserControl>
