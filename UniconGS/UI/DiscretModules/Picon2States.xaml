    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    x:Class="UniconGS.UI.DiscretModules.Picon2States" mc:Ignorable="d">
    <Grid>
            
    	<Grid.RowDefinitions>
    		<RowDefinition Height="15.3"/>
