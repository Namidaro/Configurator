<Window x:Class="UniconGS.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="280" Width="380" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Grid.RowSpan="3" BorderThickness="1" BorderBrush="Black" CornerRadius="5">
            <Image Source="Images\Logo.png" Width="150"/>
        </Border>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBlock x:Name="uiProdutName" Margin="5"/>
            <TextBlock x:Name="uiVersion" Margin="5"/>
            <TextBlock x:Name="uiCopyright" Margin="5"/>
            <TextBlock x:Name="uiCompanyName" Margin="5"/>
        </StackPanel>
        <Border Grid.Column="1" Grid.Row="1" Margin="5" BorderThickness="1" BorderBrush="LightGray" CornerRadius="5">
            <TextBlock x:Name="uiDescription" Margin="3" TextWrapping="Wrap"/>
        </Border>
        <DockPanel Grid.Column="1" Grid.Row="2">
            <!--<Button DockPanel.Dock="Right" Content="OK" Width="75" IsDefault="True" Click="CloseAbout"/>-->
        </DockPanel>
    </Grid>
</Window>
