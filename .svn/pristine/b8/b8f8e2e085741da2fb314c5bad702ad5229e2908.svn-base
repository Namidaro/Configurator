<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:configuration="clr-namespace:UniconGS.UI.Configuration"
    x:Class="UniconGS.UI.Configuration.LogicConfig" mc:Ignorable="d">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="311"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56.5"/>
            <RowDefinition/>
            <RowDefinition Height="23"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Автоматика">
            <StackPanel x:Name="PART_AutomationHolder" DataContext="{Binding}" Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Top">
                <Label VerticalAlignment="Center" Height="25" Content="Время включения автоматики:" VerticalContentAlignment="Center"/>
                <TextBox x:Name="uiAutomationTime" Margin="10,0" Width="92" Text="{Binding Path=AutomationTime, Mode=TwoWay }"/>
                <Label VerticalAlignment="Center" Content="с."/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Маска неисправностей" Name="Mask" Grid.Row="1" Grid.Column="0" Height="{Binding}" VerticalAlignment="Top">
            <configuration:ErrorMask x:Name="uiErrorMatrix" IsEnabled="False" Margin="0,0,25,0"/>
        </GroupBox>
        <GroupBox Margin="0,117.219,0,5" Header="Неисправности" Grid.Row="1" Grid.Column="0">
        
         <ScrollViewer Margin="0,5,0,0">
                <StackPanel>
                    <Expander Header="Канал №1" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiChannel1Matrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Канал №2" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiChannel2Matrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Канал №3" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiChannel3Matrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Канал №4" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiChannel4Matrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Канал №5" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiChannel5Matrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Канал №6" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiChannel6Matrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Канал №7" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiChannel7Matrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Канал №8" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiChannel8Matrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Питание" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiPowerMatrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Режим управления" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiManagmentMatrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                    <Expander Header="Охрана" Margin="0,0,5,0">
                        <Grid>
                            <configuration:ErrorMask x:Name="uiSecurityMatrix" Margin="0,5"/>
                        </Grid>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
        <GroupBox Margin="5,0,5,5" Header="Настройка каналов" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <Grid Margin="0,5,0,0">
                <ScrollViewer d:LayoutOverrides="Width" VerticalScrollBarVisibility="Auto">
                    <Grid MinHeight="100" x:Name="PART_LogicContainer" DataContext="{Binding}">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20.4"/>
                            <RowDefinition Height="0.134*"/>
                            <RowDefinition Height="0.134*"/>
                            <RowDefinition Height="0.134*"/>
                            <RowDefinition Height="0.134*"/>
                            <RowDefinition Height="0.134*"/>
                            <RowDefinition Height="0.134*"/>
                            <RowDefinition Height="0.134*"/>
                            <RowDefinition Height="0.134*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13.2"/>
                            <ColumnDefinition Width="0.272*"/>
                            <ColumnDefinition Width="0.284*"/>
                            <ColumnDefinition Width="0.444*"/>
                        </Grid.ColumnDefinitions>
                        <Label Margin="0" Content="№" d:LayoutOverrides="Width, Height" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="1" Grid.Row="1" Grid.Column="0" />
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="2" Grid.Row="2" Grid.Column="0" />
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="3" Grid.Row="3" Grid.Column="0" />
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="4" Grid.Row="4" Grid.Column="0" />
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="5" Grid.Row="5" Grid.Column="0" />
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="6" Grid.Row="6" Grid.Column="0" />
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="7" Grid.Row="7" Grid.Column="0" />
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="8" Grid.Row="23" Grid.Column="0" />
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="Данные КУ" Grid.Row="0"
						       Grid.Column="1"/>
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="Выходы КУ" Grid.Row="0"
						       Grid.Column="2"/>
                        <Label HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Content="Контроль управления" Grid.Row="0"
						       Grid.Column="3"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="uiDataKU1" Margin="2"
                                  Height="25" VerticalAlignment="Center"
                                  SelectedIndex="{Binding .[0].GraphicValue, Mode=TwoWay}"/>
                        <ComboBox SelectedIndex="{Binding .[0].ReleValue, Mode=TwoWay}" 
                                  Margin="2" Grid.Column="2" Grid.Row="1" x:Name="uiOutKU1"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox x:Name="uiKU1" SelectedIndex="{Binding .[0].DiscretValue, Mode=TwoWay}"
                                  Margin="2" Grid.Column="3" Grid.Row="1"
                                  Height="25" VerticalAlignment="Center"
                                  SelectionChanged="uiKU_SelectionChanged"/>

                        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="uiDataKU2"  Margin="2" Height="25" 
                                  VerticalAlignment="Center"
                                  SelectedIndex="{Binding .[1].GraphicValue, Mode=TwoWay}"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="uiDataKU3"
                                  Margin="2" Height="25" VerticalAlignment="Center"
                                  SelectedIndex="{Binding .[2].GraphicValue, Mode=TwoWay}" />
                        <ComboBox 
                                  Grid.Row="4" Grid.Column="1" Margin="2" 
                                  Height="25" VerticalAlignment="Center" x:Name="uiDataKU4"
                                  SelectedIndex="{Binding .[3].GraphicValue, Mode=TwoWay}"/>
                        <ComboBox SelectedIndex="{Binding .[4].GraphicValue, Mode=TwoWay}"
                                  Grid.Row="5" Grid.Column="1" Margin="2" x:Name="uiDataKU5"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[5].GraphicValue, Mode=TwoWay}"
                                  Grid.Row="6" Grid.Column="1" Margin="2" x:Name="uiDataKU6"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[6].GraphicValue, Mode=TwoWay}" 
                                  Grid.Row="7" Grid.Column="1" Margin="2" x:Name="uiDataKU7"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[7].GraphicValue, Mode=TwoWay}" 
                                  Grid.Row="8" Grid.Column="1" Margin="2" x:Name="uiDataKU8"
                                  Height="25" VerticalAlignment="Center"/>

                        <ComboBox SelectedIndex="{Binding .[1].ReleValue, Mode=TwoWay}" 
                                  Margin="2" Grid.Column="2" Grid.Row="2" x:Name="uiOutKU2"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[2].ReleValue, Mode=TwoWay}"
                                  Margin="2" Grid.Column="2" Grid.Row="3" x:Name="uiOutKU3"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[3].ReleValue, Mode=TwoWay}"
                                  Margin="2" Grid.Column="2" Grid.Row="4" x:Name="uiOutKU4"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[4].ReleValue, Mode=TwoWay}" 
                                  Margin="2" Grid.Column="2" Grid.Row="5" x:Name="uiOutKU5"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[5].ReleValue, Mode=TwoWay}" 
                                  Margin="2" Grid.Column="2" Grid.Row="6" x:Name="uiOutKU6"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[6].ReleValue, Mode=TwoWay}" 
                                  Margin="2" Grid.Column="2" Grid.Row="7" x:Name="uiOutKU7"
                                  Height="25" VerticalAlignment="Center"/>
                        <ComboBox SelectedIndex="{Binding .[7].ReleValue, Mode=TwoWay}" 
                                  Margin="2" Grid.Column="2" Grid.Row="8" x:Name="uiOutKU8"
                                  Height="25" VerticalAlignment="Center"/>

                        <ComboBox x:Name="uiKU2" SelectedIndex="{Binding .[1].DiscretValue, Mode=TwoWay}"
                                  Margin="2" Grid.Column="3" Grid.Row="2" 
                                  Height="25" VerticalAlignment="Center"
                                  SelectionChanged="uiKU_SelectionChanged"/>
                        <ComboBox x:Name="uiKU3" SelectedIndex="{Binding .[2].DiscretValue, Mode=TwoWay}"
                                  Margin="2" Grid.Column="3" Grid.Row="3" 
                                  Height="25" VerticalAlignment="Center"
                                  SelectionChanged="uiKU_SelectionChanged"/>
                        <ComboBox x:Name="uiKU4" SelectedIndex="{Binding .[3].DiscretValue, Mode=TwoWay}"
                                  Margin="2" Grid.Column="3" Grid.Row="4" 
                                  Height="25" VerticalAlignment="Center"
                                  SelectionChanged="uiKU_SelectionChanged"/>
                        <ComboBox x:Name="uiKU5" SelectedIndex="{Binding .[4].DiscretValue, Mode=TwoWay}"
                                  Margin="2" Grid.Column="3" Grid.Row="5" 
                                  Height="25" VerticalAlignment="Center"
                                  SelectionChanged="uiKU_SelectionChanged"/>
                        <ComboBox x:Name="uiKU6" SelectedIndex="{Binding .[5].DiscretValue, Mode=TwoWay}"
                                  Margin="2" Grid.Column="3" Grid.Row="6" 
                                  Height="25" VerticalAlignment="Center"
                                  SelectionChanged="uiKU_SelectionChanged"/>
                        <ComboBox x:Name="uiKU7" SelectedIndex="{Binding .[6].DiscretValue, Mode=TwoWay}" 
                                  Margin="2" Grid.Column="3" Grid.Row="7"
                                  Height="25" VerticalAlignment="Center"
                                  SelectionChanged="uiKU_SelectionChanged"/>
                        <ComboBox x:Name="uiKU8" SelectedIndex="{Binding .[7].DiscretValue, Mode=TwoWay}" 
                                  Margin="2" Grid.Column="3" Grid.Row="8"
                                  Height="25" VerticalAlignment="Center"
                                  SelectionChanged="uiKU_SelectionChanged"/>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="2" Margin="0,0,8,0" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" d:LayoutOverrides="GridBox">
            <Button x:Name="uiLogicConfigOpen" Width="75" Content="Открыть" Margin="10,0,0,0" Click="uiLogicConfigOpen_Click"/>
            <Button x:Name="uiLogicConfigSave" Width="75" Content="Сохранить" Margin="10,0,0,0" Click="uiLogicConfigSave_Click"/>
            <Button x:Name="uiLogicExport" Width="75" Content="Записать" Margin="10,0,0,0" Click="uiLogicExport_Click"/>
            <Button x:Name="uiLogicImport" Width="75" Content="Прочитать" Margin="10,0,0,0" Click="uiLogicImport_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
