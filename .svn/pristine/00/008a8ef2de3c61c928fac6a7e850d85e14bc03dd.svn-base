<UserControl x:Class="UniconGS.UI.Lightning"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<UserControl.Resources>
		<RadialGradientBrush x:Key="StrockeBrus" GradientOrigin="0.997,0.012" RadiusX="0.705" RadiusY="0.705">
			<GradientStop Color="#33434343" Offset="0.743"/>
			<GradientStop Color="#2D9F9F9F" Offset="0.932"/>
		</RadialGradientBrush>
	</UserControl.Resources>
    <Grid>
    	<Ellipse x:Name="uiTurnOn" Visibility="Hidden" Stroke="{DynamicResource StrockeBrus}">
    		<Ellipse.Fill>
    			<RadialGradientBrush>
    				<GradientStop Color="#FFFF3030" Offset="0"/>
    				<GradientStop Color="#FF941A1A" Offset="0.859"/>
    			</RadialGradientBrush>
    		</Ellipse.Fill>
    	</Ellipse>
    	<Ellipse x:Name="uiTurnOff" Visibility="Hidden" Stroke="{DynamicResource StrockeBrus}">
    		<Ellipse.Fill>
    			<RadialGradientBrush>
    				<GradientStop Color="#FF49FF30" Offset="0"/>
    				<GradientStop Color="#FF1A9433" Offset="0.859"/>
    			</RadialGradientBrush>
    		</Ellipse.Fill>
    	</Ellipse>
    	<Ellipse x:Name="uiDefault" Stroke="{DynamicResource StrockeBrus}">
    		<Ellipse.Fill>
    			<RadialGradientBrush>
    				<GradientStop Color="#FF969696" Offset="0"/>
    				<GradientStop Color="#FF393939" Offset="0.859"/>
    			</RadialGradientBrush>
    		</Ellipse.Fill>
    	</Ellipse>
            
    </Grid>
</UserControl>
