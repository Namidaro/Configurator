<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="UniconGS.CreateConnectionWizard"
    Title="Подключение" Height="270" Width="467" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" mc:Ignorable="d" Loaded="Window_Loaded">
    <Grid>

        <TabControl x:Name="uiMainDialog">
            <TabItem x:Name="uiConnection" Header="Подключение">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="24"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="449"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="uiNext" HorizontalAlignment="Right" Margin="0,0,10,0" Width="75" Content="Далее" Grid.Row="1" d:LayoutOverrides="Height"/>
                    <Button x:Name="uiConnectionCancel" Margin="0,0,90,0" Content="Отмена" Grid.Row="1" d:LayoutOverrides="Height" HorizontalAlignment="Right" Width="81"/>
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,14" VerticalAlignment="Center" Orientation="Horizontal">
                        <Label Content="Порт:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="uiPorts" Width="120" Margin="5,0,0,0"/>
                        <Button x:Name="uiRelodePorts" Width="75" Content="Обновить" Margin="5,0,0,0"/>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="Выберите COM-порт, к которому подключено устройство..." TextWrapping="Wrap" Margin="10,6,0,0"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="uiSettings" IsEnabled="False" Header="Настройки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="24"/>
                    </Grid.RowDefinitions>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                        <StackPanel Margin="5">
                            <Label Content="Скорость"/>
                            <ComboBox x:Name="uiSpeed" SelectedIndex="7">
                                <ComboBoxItem Content="1200"/>
                                <ComboBoxItem Content="2400"/>
                                <ComboBoxItem Content="4800"/>
                                <ComboBoxItem Content="9600"/>
                                <ComboBoxItem Content="19200"/>
                                <ComboBoxItem Content="38400"/>
                                <ComboBoxItem Content="57600"/>
                                <ComboBoxItem Content="115200"/>
                                <ComboBoxItem Content="230400"/>
                                <ComboBoxItem Content="460800"/>
                                <ComboBoxItem Content="921600"/>
                            </ComboBox>
                            <Label Content="Время ожидания ответа"/>
                            <TextBox x:Name="uiTimeout" Text="200" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <!--<Label Content="Номер КН"/>
                            <TextBox x:Name="uiKNNumber" Text="0" TextWrapping="Wrap"/>-->
                            <Label Content="Номер устройства"/>
                            <TextBox x:Name="uiDeviceNumber" Text="1" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                    <Button x:Name="uiApply" HorizontalAlignment="Right" Width="75" Content="Применить" Margin="0" Grid.Row="1" d:LayoutOverrides="Height"/>
                    <Button x:Name="uiBack" HorizontalAlignment="Right" Margin="0,0,80,0" Width="75" Content="Назад" Grid.Row="1" d:LayoutOverrides="Height"/>
                    <Button x:Name="uiSettingsCancel" HorizontalAlignment="Right" Margin="0,0,160,0" Width="75" Content="Отмена" Grid.Row="1" d:LayoutOverrides="Height"/>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Text="Выберите настройки COM-порта..." TextWrapping="Wrap" Margin="10,7,0,0"/>
                </Grid>
            </TabItem>
            <!--<TabItem x:Name="uiModlesNumber" IsEnabled="False" Header="Настройки модулей"> 
                
            </TabItem>-->
        </TabControl>

    </Grid>
</Window>
