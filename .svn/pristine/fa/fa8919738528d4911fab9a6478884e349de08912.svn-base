<Window
    x:Class="UniconGS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:channels="clr-namespace:UniconGS.UI.Channels"
    xmlns:configuration="clr-namespace:UniconGS.UI.Configuration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:discretModules="clr-namespace:UniconGS.UI.DiscretModules"
    xmlns:gprs="clr-namespace:UniconGS.UI.GPRS"
    xmlns:heatingSchedule="clr-namespace:UniconGS.UI.HeatingSchedule"
    xmlns:journal="clr-namespace:UniconGS.UI.Journal"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:schedule="clr-namespace:UniconGS.UI.Schedule"
    xmlns:settings="clr-namespace:UniconGS.UI.Settings"
    xmlns:time="clr-namespace:UniconGS.UI.Time"
    xmlns:uniconGsUi="clr-namespace:UniconGS.UI"
    xmlns:mrNetworking="clr-namespace:UniconGS.UI.MRNetworking"
    Title="БЭМН Конфигуратор Минск ГОРСВЕТ"
    Width="980"
    Height="635"
    MinWidth="980"
    MinHeight="635"
    Closing="MainWindow_Closing"
    Icon="Images/Application.ico"
    SnapsToDevicePixels="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
      >
    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0" Color="#FFC3BFBF" />
            <GradientStop Offset="1" Color="#FFE2E2E2" />
            <GradientStop Offset="0.016" Color="#FFC7C4C4" />
            <GradientStop Offset="0.084" Color="#FFDADADA" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25.5" />
            <RowDefinition />
            <RowDefinition Height="23.35" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Margin="10,0,0,0" Header="Файл">
                <MenuItem
                    x:Name="uiDeviceSelection"
                    Click="uiDeviceSelection_Click"
                    Header="Выбор устройства" />
                <Separator />
                <MenuItem
                    x:Name="uiConnect"
                    Click="uiConnect_Click"
                    Header="Подключиться" />
                <MenuItem
                    x:Name="uiReconnect"
                    Header="Переподключиться"
                    IsEnabled="False" />
                <MenuItem x:Name="uiAutonomous" Header="Автономный режим" />
                <MenuItem
                    x:Name="uiDisconnect"
                    Click="uiDisconnect_Click"
                    Header="Отключиться" />
                <Separator />
                <MenuItem
                    x:Name="uiExit"
                    Click="uiExit_Click"
                    Header="Выход" />
            </MenuItem>
            <MenuItem Margin="10,0,0,0" Header="Помощь">
                <MenuItem x:Name="uiAbout" Header="О программе" />
                <MenuItem x:Name="uiUsersGyde" Header="Руководство пользователя" />
            </MenuItem>
        </Menu>
        <Border
            x:Name="PART_MAINBODY"
            Grid.Row="1"
            Margin="0,0,0,2"
            BorderBrush="Black"
            BorderThickness="0">
            <Grid>
                <TabControl x:Name="uiMainControl" SelectionChanged="TabItemSelected">
                    <TabItem
                        Margin="-10,2,10,-2"
                        Header="Главная"
                        IsSelected="True">
                        <Grid>
                            <Border
                                x:Name="uiHider"
                                Margin="0"
                                Background="#FFD2D2D2"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="235.65" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="356" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.RowSpan="2"
                                        Grid.ColumnSpan="2"
                                        Margin="0,70,0,153.04"
                                        Padding="10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Background="#FFE6E6E6"
                                        BorderBrush="#FF9D9A9A"
                                        BorderThickness="0"
                                        CornerRadius="5"
                                        d:LayoutOverrides="GridBox">
                                        <StackPanel
                                            Margin="0,0,0,-2"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal"
                                            d:LayoutOverrides="Height">
                                            <Button
                                                x:Name="uiConnectBtn"
                                                Width="120"
                                                Height="106"
                                                Margin="0,0,25,0"
                                                BorderThickness="0"
                                                ToolTip="Подключиться">
                                                <Image
                                                    Width="100"
                                                    Height="100"
                                                    Source="Images\1290760689_usbpendrive_mount.png" />
                                            </Button>
                                            <Button
                                                x:Name="uiReconnectBtn"
                                                Width="120"
                                                Height="106"
                                                Margin="0,0,25,0"
                                                ToolTip="Повторить подключение"
                                                Visibility="Collapsed">
                                                <Image
                                                    Width="100"
                                                    Height="100"
                                                    Source="Images/Reconnect.png" />
                                            </Button>
                                            <Button
                                                x:Name="uiAutonomousBtn"
                                                Width="120"
                                                Height="106"
                                                Margin="0,0,25,0"
                                                ToolTip="Работать в автономном режиме">
                                                <Image
                                                    Width="100"
                                                    Height="100"
                                                    Source="Images\Autonomous.png" />
                                            </Button>
                                            <Button
                                                x:Name="uiDisconnectBtn"
                                                Width="120"
                                                Height="106"
                                                Margin="0,0,25,0"
                                                ToolTip="Отключиться"
                                                Visibility="Collapsed">
                                                <Image
                                                    Width="100"
                                                    Height="100"
                                                    Source="Images\Disconnect.png" />
                                            </Button>
                                            <Button
                                                x:Name="uiUserGydeBtn"
                                                Width="120"
                                                Height="106"
                                                ToolTip="О программе">
                                                <Image
                                                    Width="100"
                                                    Height="100"
                                                    Source="Images\1290721358_Help.png" />
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                    <Image
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="131.2"
                                        Height="127.5"
                                        Margin="0,3.242,0,56.796"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        OpacityMask="#B6FFFFFF"
                                        Source="Images/Logo.png" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,0,0,59.296"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        FontSize="29.333"
                                        FontWeight="Bold"
                                        Foreground="#FF2E2B2B"
                                        Text="ОАО"
                                        TextWrapping="Wrap"
                                        d:LayoutOverrides="VerticalAlignment" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,0,0,36.629"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        FontSize="21.333"
                                        FontWeight="Bold"
                                        Foreground="#FF2E2B2B"
                                        Text="&quot;Белэлектромонтажналадка&quot;"
                                        TextWrapping="Wrap"
                                        d:LayoutOverrides="VerticalAlignment" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,0,0,15.7"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Text="г.Минск, 2017г"
                                        TextWrapping="Wrap"
                                        d:LayoutOverrides="Width" />
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Диагностика" IsEnabled="False">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="183.056" />
                                <RowDefinition Height="63" />
                                <RowDefinition Height="98" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="331.899" />
                                <ColumnDefinition Width="54*" />
                                <ColumnDefinition Width="103*" />
                            </Grid.ColumnDefinitions>
                            <GroupBox
                                Grid.ColumnSpan="2"
                                Width="332"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Header="Дата и время">
                                <Grid>
                                    <time:Time
                                        x:Name="uiTime"
                                        Margin="0"
                                        d:LayoutOverrides="Width, Height" />
                                </Grid>
                            </GroupBox>
                            <GroupBox
                                Grid.Row="0"
                                Grid.RowSpan="3"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="0,0,5,3.826"
                                Header="Данные диагностики">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="31.205" />
                                        <ColumnDefinition Width="168.693" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <ScrollViewer
                                        x:Name="uiScrollViewer"
                                        Grid.Column="2"
                                        HorizontalScrollBarVisibility="Auto"
                                        VerticalScrollBarVisibility="Disabled"
                                        Visibility="Hidden">
                                        <uniconGsUi:PiconGSDiagnostics x:Name="uiPiconDiagnostics" Visibility="Hidden" />
                                    </ScrollViewer>
                                    <uniconGsUi:DiagnosticsErrors
                                        x:Name="uiDiagnosticsErrors"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="0,0,0,-10"
                                        Visibility="Hidden" />

                                    <Image
                                        x:Name="uiRunoImage"
                                        Grid.Column="2"
                                        Margin="5,10,53.896,-10"
                                        Source="/PicGSConfig;Component/Images/Slice 1.png"
                                        Visibility="Visible" />
                                </Grid>
                            </GroupBox>
                            <settings:ControllerSettings
                                x:Name="uiSettings"
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                Height="100"
                                VerticalAlignment="Top" />
                            <GroupBox
                                Grid.Row="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Margin="0,2,5,5"
                                Header="Журнал системы">
                                <Grid>
                                    <journal:SystemJournal x:Name="uiSystemJournal" Margin="0" />
                                </Grid>
                            </GroupBox>
                            <GroupBox
                                Grid.Row="1"
                                Margin="0,0,0,5"
                                Header="Сигнал GSM">
                                <uniconGsUi:SignalGSMLevel
                                    x:Name="uiSignalGSMLevel"
                                    Margin="83,0,70.899,-7.96"
                                    RenderTransformOrigin="0.504,0.692" />
                            </GroupBox>
                        </Grid>
                    </TabItem>
                    <TabItem
                        Header="Задачи логики"
                        IsEnabled="False"
                        IsSelected="True"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="165.04" />
                                <RowDefinition Height="111" />
                                <RowDefinition Height="105.623" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="299.5" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <GroupBox Margin="0,0,5,5" Header="Неисправности">
                                <Grid>
                                    <uniconGsUi:KUErrors
                                        x:Name="uiErrors"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        d:LayoutOverrides="Width, Height" />
                                </Grid>
                            </GroupBox>
                            <GroupBox
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,5,5"
                                Header="Ошибки включения">
                                <Grid>
                                    <uniconGsUi:KUState x:Name="uiTurnOnErrors" Margin="10,0,-6,2" />
                                </Grid>
                            </GroupBox>
                            <GroupBox
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                Header="Ошибки предохранителей">
                                <Grid>
                                    <uniconGsUi:KUState
                                        x:Name="uiFuseErrors"
                                        Margin="4,2,0,0"
                                        d:LayoutOverrides="Width, Height" />
                                </Grid>
                            </GroupBox>
                            <GroupBox
                                Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,2,5,5"
                                Header="Данные счетчика">
                                <Grid>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Width="262" Orientation="Vertical">
                                            <uniconGsUi:Meter x:Name="uiMeter" Height="254" />
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </GroupBox>
                            <Grid
                                Grid.Row="0"
                                Grid.RowSpan="4"
                                Grid.Column="1"
                                Margin="0,0,5,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="325*" />
                                    <RowDefinition Height="Auto" MinHeight="61.235" />
                                    <RowDefinition Height="92*" />
                                </Grid.RowDefinitions>
                                <GroupBox
                                    Grid.RowSpan="2"
                                    Margin="0,0,0,46.293"
                                    Header="Контроль каналов управления">
                                    <Grid Margin="0,5,0,0">
                                        <ScrollViewer
                                            Margin="0"
                                            VerticalScrollBarVisibility="Auto"
                                            d:LayoutOverrides="Width, Height">
                                            <channels:ChannelsManagment x:Name="uiChannelsManagment" />
                                        </ScrollViewer>
                                    </Grid>
                                </GroupBox>
                                <GroupBox
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Margin="0,19.942,0,0"
                                    Header="Индексация состояния">
                                    <Grid Margin="0,5,0,0">
                                        <ScrollViewer Margin="0">
                                            <discretModules:AllStates x:Name="uiStates" Height="Auto" />
                                        </ScrollViewer>
                                    </Grid>
                                </GroupBox>
                                <GridSplitter
                                    Grid.Row="1"
                                    Margin="0,19.942,2,34.192"
                                    HorizontalAlignment="Stretch"
                                    RenderTransformOrigin="0.5,0.5" />
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Конфигурация" IsEnabled="False">
                        <Grid>
                            <configuration:LogicConfig 
                                x:Name="uiLogicConfig"
                                Margin="0"
                                d:LayoutOverrides="Width, Height">
                            </configuration:LogicConfig>
                        </Grid>
                    </TabItem>
                    <TabItem Header="График освещения" IsEnabled="False">
                        <Grid>
                            <schedule:Schedule
                                x:Name="uiLightingSchedule"
                                Margin="0"
                                HasEconomy="Visible"
                                d:LayoutOverrides="Width, Height" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="График подсветки" IsEnabled="False">
                        <Grid>
                            <schedule:Schedule
                                x:Name="uiBacklightSchedule"
                                Margin="0"
                                HasEconomy="Visible"
                                d:LayoutOverrides="Width, Height" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="График иллюминации" IsEnabled="False">
                        <Grid>
                            <schedule:Schedule
                                x:Name="uiIlluminationSchedule"
                                Margin="0"
                                HasEconomy="Visible"
                                d:LayoutOverrides="Width, Height" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="График энергосбережения" IsEnabled="False">
                        <Grid>
                            <schedule:Schedule
                                x:Name="uiEnergySchedule"
                                Margin="0"
                                HasEconomy="Hidden"
                                d:LayoutOverrides="Width, Height" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="График обогрева" IsEnabled="False">
                        <Grid>
                            <heatingSchedule:HeatingSchedule
                                x:Name="uiHeatingSchedule"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="GPRS модем" IsEnabled="False">
                        <Grid>
                            <gprs:GPRSConfiguration
                                x:Name="uiGPRSConfig"
                                Margin="0"
                                d:LayoutOverrides="Width" />
                        </Grid>
                    </TabItem>
                    <TabItem Header ="МР-сеть" IsEnabled="False">
                        <Grid>
                            <mrNetworking:MRNetwork x:Name="uiMrNetwork" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></mrNetworking:MRNetwork>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
        <Rectangle
            x:Name="uiBackgrounder"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="0"
            Fill="Black"
            Opacity="0.34"
            Stroke="Black"
            Visibility="Collapsed" />
        <Border
            Grid.Row="3"
            Margin="0"
            Background="#FFCECECE"
            BorderBrush="#FF848181"
            BorderThickness="1">
            <Grid x:Name="uiStateControl">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7" />
                    <ColumnDefinition Width="23.333" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="uiStateIcon"
                    Grid.Column="1"
                    Margin="0,2"
                    Source="Images\softwareUpdate-256.png" />
                <TextBlock
                    x:Name="uiStatePresenter"
                    Grid.Column="2"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Text="TextBlock"
                    TextWrapping="Wrap" />
            </Grid>
        </Border>

        <!--<Border x:Name="uiProcessIndicator" Margin="0" Background="#9A000000" BorderBrush="Black" BorderThickness="1" Grid.RowSpan="2" Visibility="Hidden">
    		<Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Height="100" Background="White" BorderBrush="#969F9797" BorderThickness="3" CornerRadius="5">
    			<Grid>
    				<Grid.ColumnDefinitions>
    					<ColumnDefinition Width="0.405*"/>
    					<ColumnDefinition Width="0.595*"/>
    				</Grid.ColumnDefinitions>
    				<UniconGS_UI_Spinner:Spinner Margin="0" d:LayoutOverrides="Width, Height"/>
    				<TextBlock Margin="0" VerticalAlignment="Center" Grid.Column="3" TextWrapping="Wrap" d:LayoutOverrides="Width"><Run Text="Выполняется действие."/><LineBreak/><Run Text="Пожалуйста подождите..."/></TextBlock>
    			</Grid>
    		</Border>
    	</Border>-->

    </Grid>
</Window>

